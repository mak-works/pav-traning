<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:layout_marginLeft="15dp"
    android:orientation="vertical">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_countdown_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/countDownNoti"
            android:textColor="@color/black"
            android:textSize="12dp">
        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_countdown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/countDown"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>

            <TextView
                android:id="@+id/colon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_countdown"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>

            <TextView
                android:id="@+id/min_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>

            <TextView
                android:id="@+id/min_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>

            <TextView
                android:id="@+id/colonin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>

            <TextView
                android:id="@+id/sec_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>

            <TextView
                android:id="@+id/sec_ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="12dp">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/action_one"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:background="@color/colorgreen"
                android:text="Accept"
                android:textColor="@color/white"
                android:textSize="6dp"
                android:textStyle="bold">

            </Button>

            <Button
                android:id="@+id/action_two"
                android:layout_width="70dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/colorRed"
                android:text="Deny"
                android:textColor="@color/white"
                android:textSize="6dp"
                android:textStyle="bold">

            </Button>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>