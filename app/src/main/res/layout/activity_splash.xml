<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".movemarker.kotlin.splash.splashnew.SplashActivity">

    <TextView
        android:id="@+id/tv_userdata"
        android:gravity="center"
        android:textSize="25sp"
        android:text="User data"
        android:layout_marginTop="@dimen/material_10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_userdata"
        android:layout_marginStart="@dimen/material_10dp"
        android:layout_marginEnd="@dimen/material_10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_userdata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.recyclerview.widget.RecyclerView>

</androidx.constraintlayout.widget.ConstraintLayout>